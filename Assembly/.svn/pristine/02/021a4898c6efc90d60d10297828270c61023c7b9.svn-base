Imports AutoNumeric
Imports System.Xml.Serialization

''' <summary>
''' Singleton
''' C4->Y0REAL
''' </summary>
''' <remarks></remarks>
Public Class c4htm
    Inherits htmEdgeElementary

    Public Event TransformationChanged(ByVal sender As Object, ByVal e As EventArgs)

    ''' <summary>
    ''' The Ay Control Value From Zero Point
    ''' </summary>
    ''' <value></value>
    ''' <returns></returns>
    ''' <remarks></remarks>
    <XmlIgnore()>
    Property AyFromHome As Double
        Get
            'update ayFromHome
            __ayFromHome = __matrixCore(0, axisEntityEnum.Y) - YhomeOffset
            Return __ayFromHome
        End Get
        Set(value As Double)
            __ayFromHome = value
            'update
            __matrixCore(0, axisEntityEnum.Y) = value + YhomeOffset
            RaiseEvent TransformationChanged(Me, EventArgs.Empty)
        End Set
    End Property
    Property AzFromHome As Double
        Get
            'update azFromHome
            __azFromHome = __matrixCore(0, axisEntityEnum.Z) - ZhomeOffset
            Return __azFromHome
        End Get
        Set(value As Double)
            __azFromHome = value
            __matrixCore(0, axisEntityEnum.Z) = value + ZhomeOffset
            RaiseEvent TransformationChanged(Me, EventArgs.Empty)
        End Set
    End Property

    Dim __ayFromHome As Double = 0
    Dim __azFromHome As Double = 0

    ''' <summary>
    ''' Need to be stored
    ''' The home position reference to previous frame
    ''' </summary>
    ''' <value></value>
    ''' <returns></returns>
    ''' <remarks></remarks>
    Property YhomeOffset As Double = 0
    Property ZhomeOffset As Double = 0

    Protected Sub New()
        MyBase.New(framesDefinition.C4,
                   framesDefinition.Y0REAL)
    End Sub

    Shared __reference As c4htm = Nothing
    Public Shared ReadOnly Property Instance As c4htm
        Get
            If __reference Is Nothing Then
                __reference = New c4htm
            End If
            Return __reference
        End Get
    End Property

End Class
